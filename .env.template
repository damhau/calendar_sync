# Microsoft 365 Configuration
# For personal use: Leave CLIENT_ID blank to use Microsoft's public client
# For enterprise: Register app in Azure AD and set CLIENT_ID
M365_TENANT_ID=common
M365_CLIENT_ID=
M365_CLIENT_SECRET=
M365_AUTHORITY=https://login.microsoftonline.com/common

# Exchange EWS Configuration
# Only needed if using --source ews
EWS_SERVER_URL=https://outlook.office365.com/EWS/Exchange.asmx
EWS_CLIENT_ID=
EWS_TENANT_ID=common
EWS_PRIMARY_EMAIL=your-email@domain.com

# EWS Authentication Method
# "oauth" = OAuth2/MSAL (for modern Exchange/M365)
# "selenium" = Browser-based auth (for F5/SAML/OIDC protected Exchange)
EWS_AUTH_METHOD=oauth

# Selenium auth settings (only if EWS_AUTH_METHOD=selenium)
# For ICRC or other F5-protected Exchange servers
# EWS_SERVER_URL=https://mail.ext.icrc.org
# EWS_AUTH_METHOD=selenium
# EWS_COOKIE_FILE=.ews_cookies.json

# Token Cache Configuration
TOKEN_CACHE_PATH=.token_cache
TOKEN_CACHE_ENCRYPTED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=calendar_sync.log

# Sync Configuration
SYNC_DIRECTION=read_only
SYNC_LOOKBACK_DAYS=30
SYNC_LOOKAHEAD_DAYS=90
